header 
  section.top-header
    .container
      .row
        .d-none.d-md-block.col-md-3.mr-md-auto
          - var socials = ['fab fa-facebook-f', 'fab fa-google-plus-g', 'fab fa-instagram', 'fab fa-twitter']
          ul.socials.d-flex
            each social, index in socials
              li(class= `socials__item${!index ? ' active' : ''}`)
                a.d-flex-center(href="#")
                  i(class= social) 
        .col-12.col-sm-4.col-lg-3
          .top-header__btns.h-100
            a.btn.d-flex-center.border.border-top-0.border-bottom-0(href="#") Đăng ký 
            a.btn.d-flex-center.border-right(href="#") Đăng nhập
  
  section.main-header
    .container
      .d-flex.flex-column.flex-md-row.align-items-center
        .main-header__brand.mr-md-auto
          img(src="./assets/images/logo_2.png", alt="")
            
        .main-header__content.d-none.d-lg-block
          span Hotline#{'\x3A'}
          p.mb-0 (04) 9500 9650 #{'\x2D'} (04) 9500 8850
        .main-header__content.d-none.d-lg-block
          span Hotline#{'\x3A'}
          p.mb-0 (04) 9500 9650 #{'\x2D'} (04) 9500 8850
        .main-header__search
          input(id="search" type="text" placeholder="Tìm kiếm...")
          label(for="search") 
            i.fas.fa-search

  nav.navbar-header.navbar.navbar-expand-lg.navbar-dark
    .container
      button.navbar-header__toggle.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.bar 
        span.bar 
        span.bar    

      a(href="#").cart.order-lg-1 
        i.fas.fa-shopping-cart.fa-lg
        span.cart__badge 0

      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          +navbar__list(navbar)
